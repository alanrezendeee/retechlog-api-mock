# ================================
# RetechLog API Mock - Environment Variables
# ================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=7272
HOST=0.0.0.0

# API URLs
DEV_API=http://localhost:7272
PRODUCTION_API=https://api-mock.retechlog.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8082,http://localhost:3000,http://localhost:8081
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# JWT Configuration (for mock authentication)
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Database (Mock - in-memory)
MOCK_DATABASE_TYPE=memory

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development Features
HOT_RELOAD=true
DEBUG_MODE=false

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Mock Data Configuration
MOCK_DELAY_MIN=100
MOCK_DELAY_MAX=500
MOCK_ERROR_RATE=0.05

# External Services (Mock URLs)
EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_RETRY_ATTEMPTS=3
